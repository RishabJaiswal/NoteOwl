<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/family_main</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--note Title-->
    <style name="noteTitle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/txt_24</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--note text-->
    <style name="noteText">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/txt_body</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--note date-->
    <style name="noteDate">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/txt_caption</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <!--styling base dialog-->
    <style name="baseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButton</item>
        <item name="android:windowTitleStyle">@style/baseDialogTitle</item>
        <item name="android:textColorPrimary">@color/textSecondary</item>
        <item name="android:textAppearanceMedium">@style/baseDialogMsg</item>
    </style>

    <!--base button-->
    <style name="baseDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <!--positive button-->
    <style name="positiveButton" parent="baseDialogButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--negative button-->
    <style name="negativeButton" parent="baseDialogButton">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!--title-->
    <style name="baseDialogTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/txt_18</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!--message-->
    <style name="baseDialogMsg" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
